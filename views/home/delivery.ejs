<!-- 
	
	Home.Delivery

	* This file is the manage table for the active deliveries

 -->

<div class="container">
	<div class="row">
		<div class="col-sm-6">
			<p>
			<b>Livraison vide:</b> <span class="bg-warning">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>&nbsp;&nbsp;
			<b>Livraison active:</b> <span class="bg-info">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>&nbsp;&nbsp;
			<b>Livraison pleine:</b> <span class="bg-success">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>&nbsp;&nbsp;</p>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12 col-xs-12">
		
			<div class="table-responsive">
				<table class="table table-hover table-striped" id="deliveriesTable">
					<caption><%= __('Delivery.Table.caption') %></caption>
					<thead>
						<tr>
							<th><%= __('Delivery.Table.id') %></th>
							<th><%= __('Delivery.Table.createdAt') %></th>
							<th><%= __('Delivery.Table.wagon_count') %></th>
							<!-- <th><%= __('Delivery.Table.baril_count') %></th> -->
							<!-- <th><%= __('Delivery.Table.actions') %></th> -->
							<th>&nbsp;</th>
						</tr>
					</thead>
					<tbody id="deliveries">
						<% deliveries.forEach(function (delivery) { %>
							<tr class="<% switch(delivery.status) { case sails.config.k1.DELIVERY_STATUS.IN_PROGRESS: %>status<% break; } %>" id="<%= delivery.id %>">
								<td class="delivery-id"><%= delivery.id %></td>
								<td class="delivery-id"><%= Utils.formatDate(delivery.createdAt) %></td>
								<td class="delivery-wagon_count"></td>
								<!-- <td class="delivery-baril_count"></td> -->
								<td class="delivery-destroy">
									<div class="btn-group">
									  <button type="button" class="btn btn-link dropdown-toggle delivery-actions" data-toggle="dropdown">
									    <%= __('Delivery.Dropdown.Actions') %> <span class="caret"></span>
									  </button>
									  <ul class="dropdown-menu" role="menu">
									  	<li><a href="/delivery/station/<%= delivery.id %>"><%= __('Delivery.Dropdown.Actions.Manage') %></a></li>
									    <li class="divider"></li>
									    <li><a href="/report/transfersheet/<%= delivery.id %>" class="report-transfersheet"><%= __('Delivery.Dropdown.Actions.Print.TransfertSheet') %></a></li>
									    <li><a href="/report/inspectionsheet/<%= delivery.id %>" class="report-inspectionsheet"><%= __('Delivery.Dropdown.Actions.Print.InspectionSheets') %></a></li>
									    <li><a href="/report/sealsheet/<%= delivery.id %>" class="report-sealsheet"><%= __('Delivery.Dropdown.Actions.Print.SealSheet') %></a></li>
									    <li><a href="/report/offloaddata/<%= delivery.id %>" class="report-endday"><%= __('Delivery.Dropdown.Actions.Print.EndDay') %></a></li>
						          <li><a href="/report/mesure/<%= delivery.id %>" class="report-mesure-link">Imprimer: feuille des mesures</a></li>
									    
									    <li class="divider"></li>
									    <li><a href="/delivery/archive/<%= delivery.id %>" class="archive-link"><%= __('Delivery.Dropdown.Actions.Archive') %></a></li>
									    <li class="destroy-link">
									    	<a href="" data-id="<%= delivery.id %>" class="delivery-delete-btn"><%= __('Delivery.Dropdown.Actions.Destroy') %></a>
									    </li>
									  </ul>
									</div>
								</td>
							</tr>
						<% }) %>
					</tbody>
				</table>
			</div>

		</div>
	</div>
</div>

